<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/name"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/poe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/poe"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="@+id/name" />

    <TextView
        android:id="@+id/java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/java"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/poe"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/poe" />

    <TextView
        android:id="@+id/cs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cs2"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/java"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/java" />

    <TextView
        android:id="@+id/software_engineering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/software_engineering"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/cs2"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/cs2" />

    <TextView
        android:id="@+id/sql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sql"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/software_engineering"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/software_engineering" />

</androidx.constraintlayout.widget.ConstraintLayout>